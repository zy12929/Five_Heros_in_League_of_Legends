<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FCE4EC">

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.five_heros_in_league_of_legends.Main2Activity">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="NO.5  Kassadin"
        android:background="#EF9A9A"
        android:textColor="#FBE9E7"
        android:textSize="40sp"
        android:gravity="center"
        android:id="@+id/No5"
        android:padding="16dp"/>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:src="@drawable/kassadin"
        android:id="@+id/Kassadin_"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_margin="5dp"
        android:scaleType="centerCrop"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Kassadin"
        android:layout_below="@id/No5"
        android:textColor="#0D47A1"
        android:textSize="30sp"
        android:id="@+id/Kassadin"
        android:padding="10dp"
       />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="---------------"
        android:gravity="top"
        android:textSize="20sp"
        android:id="@+id/line"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="10dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="&quot;The balance of power must be preserved.&quot;"
        android:layout_toRightOf="@id/line"
        android:textColor="#000000"
        android:textSize="20sp"
        android:gravity="left"
        android:id="@+id/Quote"
        />
    </RelativeLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Abilities:"
        android:layout_below="@id/Quote"
        android:textColor="#0D47A1"
        android:textSize="20sp"
        android:gravity="center"
        android:id="@+id/Abilities"
        android:padding="10dp"
        />


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back"
        android:id="@+id/button"
        android:layout_gravity="right"
        android:onClick="back"/>
</LinearLayout>
</ScrollView>