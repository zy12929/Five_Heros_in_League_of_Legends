<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FCE4EC">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.example.android.five_heros_in_league_of_legends.Main2Activity">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="NO.2  LeBlanc"
            android:background="#D32F2F"
            android:textColor="#FBE9E7"
            android:textSize="40sp"
            android:gravity="center"
            android:id="@+id/No2"
            android:padding="16dp"/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:src="@drawable/leblanc"
            android:id="@+id/LeBlanc_"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:scaleType="centerCrop"
            android:layout_margin="5dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="LeBlanc"
            android:layout_below="@id/No2"
            android:textColor="#673AB7"
            android:textSize="30sp"
            android:id="@+id/LeBlanc"
            android:padding="10dp"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="---------------"
                android:textSize="20sp"
                android:id="@+id/line"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingBottom="10dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="&quot;The world is very different for those \t who cannot see beyond what is placed before their very eyes.&quot;"
                android:layout_toRightOf="@id/line"
                android:textColor="#000000"
                android:textSize="20sp"
                android:gravity=""
                android:id="@+id/Quote"
                />



        </RelativeLayout>


        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Back"
            android:id="@+id/button"
            android:layout_gravity="right"
            android:onClick="back"/>


    </LinearLayout>
</ScrollView>